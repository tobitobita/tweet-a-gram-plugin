<?xml version="1.0" encoding="UTF-8"?>
<plugin>
	<extension point="com.change_vision.astah.ui.actionSets">
		<actionSet
			id="dsk.tweet-a-gram-plugin.actionSet"
			label="%action_set_label"
			visible="true"
			>
		<menu
			id="tweet-a-gram-plugin"
			label="%menu_group"
			path="tool/tweet-a-gram-plugin"
			>
		</menu>
		<menu
			id="tweet-a-gram-plugin-twitter"
			label="%menu_group_twitter"
			path="tool/tweet-a-gram-plugin/twitter"
			>
		</menu>
		<action
			id="tweet-a-gram-plugin-twitter-tweet"
			label="%menu_label"
			menubarPath="tool/tweet-a-gram-plugin/twitter/"
			class="dsk.tweet_a_gram.plugin.twitter.action.TweetAction"
			icon="icons/sample.gif"
			tooltip="%menu_tooltip"
			>
		</action>
		<action
			id="tweet-a-gram-plugin-twitter-logout"
			label="%menu_label_logout"
			menubarPath="tool/tweet-a-gram-plugin/twitter/"
			class="dsk.tweet_a_gram.plugin.twitter.action.LogoutAction"
			icon="icons/sample.gif"
			tooltip="%menu_tooltip_logout"
			>
		</action>
		<menu
			id="tweet-a-gram-plugin-facebook"
			label="%menu_group_facebook"
			path="tool/tweet-a-gram-plugin/facebook"
		>
		</menu>
		<action
			id="tweet-a-gram-plugin-facebook-tweet"
			label="%menu_label"
			menubarPath="tool/tweet-a-gram-plugin/facebook/"
			class="dsk.tweet_a_gram.plugin.facebook.action.TweetAction"
			icon="icons/sample.gif"
			tooltip="%menu_tooltip"
		>
		</action>
		<action
			id="tweet-a-gram-plugin-facebook-logout"
			label="%menu_label_logout"
			menubarPath="tool/tweet-a-gram-plugin/facebook/"
			class="dsk.tweet_a_gram.plugin.facebook.action.LogoutAction"
			icon="icons/sample.gif"
			tooltip="%menu_tooltip_logout"
		>
		</action>
    </actionSet>
   </extension>
</plugin>
